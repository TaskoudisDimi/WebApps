@model List<TODOViewModel>

<div>
    <h1>TODO List</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Title</th>
            <th>Description</th>
            <th>DateCreated</th>
            <th>DeliveryDate</th>
            <th>Done</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model)
        {
            <tr>
                <td>@todo.ID</td>
                <td>@todo.Name</td>
                <td>@todo.Title</td>
                <td>@todo.Description</td>
                <td>@todo.DateCreated</td>
                <td>@todo.DeliveryDate</td>
                <td>@todo.Done</td>
                <td>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@todo.ID" asp-controller="TODO" asp-route-Name="@todo.Name">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@todo.ID" asp-controller="TODO" asp-route-Name="@todo.Name">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-primary" asp-action="Create" asp-controller="TODO">Add</a>
    <a asp-controller="Home" asp-action="" class="btn btn-secondary" style="width:150px">
        Back
    </a>
    <input asp-controller="File" asp-action="Download" type="submit" value="Download" class="btn btn-primary" />
</div>

