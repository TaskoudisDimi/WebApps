
<div class="text-center bg-white">
    <p>
        Hello to my App!
    </p>
    @if (User.Identity.IsAuthenticated)
    {
        <a class="btn btn-primary" asp-area="" asp-action="ListOfDatabases" asp-controller="Databases">Databases</a>
        <a class="btn btn-primary" asp-area="" asp-action="" asp-controller="Calendar">Calendar</a>
        <a class="btn btn-primary" asp-area="" asp-action="" asp-controller="Keys">Keys</a>
    }
    else
    {
        <div class="centered-container">
            <div>
                <a href="@Url.Action("LogIn", "Account")" class="btn btn-primary">LogIn</a>
                <a href="@Url.Action("Register", "Account")" class="btn btn-primary">Register</a>
                <a href="@Url.Action("GoBack", "Account")" class="btn btn-primary">Back</a>
            </div>
        </div>
    }
</div>




<style>
    .centered-container {
        text-align: center;
    }
</style>

