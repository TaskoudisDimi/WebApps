@model ServersViewModel

<form asp-action="Create" asp-controller="Servers" method="post">
    <div >
        <label asp-for="Id">
            Id
        </label>
        <input asp-for="Id" required/>
    </div>
    <div>
        <label asp-for="Name">
            Name
        </label>
        <input asp-for="Name" required />
    </div>
    <div>
        <input type="submit" value="Create"/>
    </div>
</form>


<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Create
            </h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Name">  </label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Servers" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back To List
        </a>
    </div>
</form>
