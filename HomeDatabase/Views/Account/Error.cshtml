@model UsersViewModel


<!-- Display LoginError -->
@if (ViewData.ModelState["LoginError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.LoginError
        <form asp-action="Login" asp-controller="Account" method="get">
        <input type="submit" value="Login" class="btn btn-primary" />
        </form>

    </div>
}

<!-- Display RegistrationError -->
@if (ViewData.ModelState["RegistrationError"] != null)
{
    <div class="alert alert-danger" role="alert">
        Registration failed.
        <form asp-action="Register" asp-controller="Account" method="get">
            <input type="submit" value="Register" class="btn btn-primary" />
        </form>

    </div>
}



